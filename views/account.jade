extends layout

block content
  div(class='row')
    div(class='col-lg-12')
      h1(class='page-header')= title
  div(class='row')
    div(class='col-lg-6')
      div(class='form-group')
        label Email:
        input(class='form-control', type='text', value='#{user.email}', disabled)
    div(class='col-lg-6')
        div(class='form-group')
            label First Name:
            input(class='form-control', type='text', value='#{user.firstName}', disabled)
    div(class='col-lg-6')
        div(class='form-group')
            label Last Name:
            input(class='form-control', type='text', value='#{user.lastName}', disabled)
    div(class='col-lg-6')
        div(class='form-group')
            label Phone:
            input(class='form-control', type='text', value='#{user.phone}', disabled)
  div(class='row')
    div(class='col-lg-12')
      h1(class='page-header') Reset Password
  div(class='row')
    if error
      div(class='alert alert-danger')= error
    form(action='/api/reset-password', method='post', id='passwordResetForm')
      div(class='col-lg-4')
        div(class='form-group')
          label Original Password
          input(class='form-control', type='password', name='originalPassword')
      div(class='col-lg-4')
        div(class='form-group')
          label New Password
          input(class='form-control', type='password', name='newPassword')
      div(class='col-lg-4')
        div(class='form-group')
          label Repeat New Password
          input(class='form-control', type='password', name='repeatedNewPassword')
      div(class='col-lg-12')
        button(type='submit', class='btn btn-danger btn-lg btn-block', value='Submit',
            dform='passwordResetForm') Reset Password