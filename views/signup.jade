doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width', initial-scale='1')
        meta(name='description', content='MyFields Inspections')
        meta(name='author', content='MyFields LLC')

        title= title

        link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/metisMenu.min.css')
        link(rel='stylesheet', href='/stylesheets/sb-admin-2.css')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css')
    body
        div(class='container')
          div(class='row')
            div(class='col-md-4 col-md-offset-4')
              div(class='login-panel panel panel-default')
                div(class='panel-heading')
                  h3(class='panel-title') MyFields - Sign Up
                div(class='panel-body')
                  if error
                      div(class='alert alert-danger')= error

                  form(role='form', action='/signup',method='post')
                    fieldset
                      div(class='form-group')
                        label Email
                        input(class='form-control', placeholder='E-mail', name='email', type='email', autofocus)
                      div(class='form-group')
                        label Password
                        input(class='form-control', placeholder='Password', name='password', type='password')
                      div(class='form-group')
                        label Repeat Password
                        input(class='form-control', placeholder='Repeat Password', name='repeatPassword', type='password')
                      div(class='form-group')
                        label First Name
                        input(class='form-control', placeholder='First Name', name='firstName', type='text')
                      div(class='form-group')
                        label Last Name
                        input(class='form-control', placeholder='Last Name', name='lastName', type='text')
                      div(class='form-group')
                        label Phone Number
                        input(class='form-control', placeholder='Phone Number', name='phone', type='number')
                      div(class='form-group')
                        label Are you a human?
                        != recaptcha_form
                      input(type='submit', class='btn btn-lg btn-warning btn-block', value='Signup')

                  div
                    br
                  div(class='row')
                    div(class='col-lg-12 text-center')
                      a(href='/login') I already have an account

        script(src='/javascripts/jquery.min.js')
        script(src='/javascripts/bootstrap.min.js')
        script(src='/javascripts/metisMenu.min.js')
        script(src='/javascripts/sb-admin-2.js')