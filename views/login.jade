doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width', initial-scale='1')
        meta(name='description', content='MyFields Inspections')
        meta(name='author', content='MyFields LLC')

        title= title

        link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/metisMenu.min.css')
        link(rel='stylesheet', href='/stylesheets/sb-admin-2.css')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css')
    body
        div(class='container')
          div(class='row')
            div(class='col-md-4 col-md-offset-4')
              div(class='login-panel panel panel-default')
                div(class='panel-heading')
                  h3(class='panel-title') MyFields - Sign In
                div(class='panel-body')
                  if error
                    div(class='alert alert-danger')= error
                  if success
                    div(class='alert alert-success')= success
                  form(role='form', action='/login',method='post')
                    fieldset
                      div(class='form-group')
                        label Email
                        input(class='form-control', placeholder='E-mail', name='username', type='email', autofocus)
                      div(class='form-group')
                        label Password
                        input(class='form-control', placeholder='Password', name='password', type='password')
                      input(type='submit', class='btn btn-lg btn-success btn-block', value='Login')
                      div
                          br
                  div(class='row')
                    div(class='col-lg-12 text-center')
                      a(href='/signup') Create a new account

        script(src='/javascripts/jquery.min.js')
        script(src='/javascripts/bootstrap.min.js')
        script(src='/javascripts/metisMenu.min.js')
        script(src='/javascripts/sb-admin-2.js')